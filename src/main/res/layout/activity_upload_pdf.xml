<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".upload_pdf">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uppdf"
        android:text="Upload Your Available Notes"
        android:textSize="25sp"
        android:fontFamily="sans-serif-smallcaps"
        android:textAlignment="center"
        android:layout_margin="43dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/upimg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/uppdf"
        android:layout_centerInParent="true"
        android:src="@drawable/uploadpdf" />

    <EditText
        android:id="@+id/edtpdfname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upimg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:hint="Enter PDF File Name"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/pdfbtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/edtpdfname"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:text="Upload" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewpdf"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/pdfbtn"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/design_default_color_secondary"
        android:onClick="viewpdf"
        android:padding="10dp"
        android:text="View Available Notes" />


</RelativeLayout>